<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- layout 구성요소들 스타일 -->
    <style name="DateFragmentTv">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RvDateTv">
        <item name="android:background">@color/colorLightBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">20sp</item>
    </style>

    <style name="RvRecordTvMemo">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RvRecordTv">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RvRecordTvAmount" parent="RvRecordTv">
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">3sp</item>
    </style>

    <style name="DateFragmentLayout">
        <item name="android:paddingTop">6sp</item>
    </style>

    <style name="RvDateLayout">
        <item name="android:background">@drawable/rv_border</item>
    </style>

    <style name="RvRecordLayout">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="RvInner">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="RvOuter">
        <item name="android:padding">12sp</item>
    </style>

    <style name="InsertFormLayout">
        <item name="android:padding">12sp</item>
    </style>

    <style name="InsertFormTv">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="InsertFormTvAmount" parent="InsertFormTv">
        <item name="android:gravity">right</item>
    </style>

    <style name="InsertFormRb" parent="InsertFormTv">
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/radio_button_textcolor</item>
    </style>

    <style name="InsertFormEt" parent="InsertFormTv">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

    <style name="InsertFormBtn">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FragmentButton">
        <item name="android:padding">13sp</item>
    </style>

    <style name="DeleteButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">5sp</item>
    </style>
</resources>