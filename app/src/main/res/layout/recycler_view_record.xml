<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="record"
            type="com.example.accountbookex3.data.Record" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/RvRecordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            style="@style/RvRecordTvIncomeOutcome"
            android:id="@+id/tv_income_outcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{record.isIncome ? @string/income : @string/outcome}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/csl_amount"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/csl_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_income_outcome"
            app:layout_constraintRight_toLeftOf="@id/tv_handle"
            >
            <TextView
                style="@style/RvRecordTvAmount"
                android:id="@+id/tv_amount"
                android:layout_width="185sp"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(record.amount)}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_won"
                />
            <TextView
                style="@style/RvRecordTv"
                android:id="@+id/tv_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/won"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_amount"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/handle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/csl_amount"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>